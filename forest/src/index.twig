{% extends "layouts/layout.twig" %}

{% block page %}
	<div class="forest">
		<div class="container">
			<div class="forest__flex">
				<div class="forest__flex-image">
					<div class="forest__flex-image-block">
						<!-- <img src="img/table.jpeg" alt="table" class="forest__flex-img"> -->
						<div class="forest__flex-image-with">
							<div class="forest__flex-image-with-line"></div>
							<div class="forest__flex-image-with-payment" ><span data-value = "width" class="_width">900</span> мм</div>
							<div class="forest__flex-image-with-line"></div>
						</div>
						<div class="forest__flex-image-height">
							<div class="forest__flex-image-with-line"></div>
							<div class="forest__flex-image-with-payment"><span data-value = "height" class="_height">200</span> мм</div>
							<div class="forest__flex-image-with-line"></div>
						</div>
					</div>
					<h2 class="forest__flex-image-name">Примерная стоимость</h2>
					<div class="forest__flex-image-price"><span class="_span" data-price = "type-price">0</span> руб.</div>
				</div>
				<div class="forest__flex-content">
					<div class="forest__flex-content-item">
						<div class="forest__flex-content-item-head">
							<h2 class="forest__flex-content-item-name">Форма стола</h2>
						</div>
						<div class="forest__flex-content-item-body">
							<div class="forest__flex-content-item-sel">
								<div class="g-select _select">
									<div class="g-select__name">Форма</div>
									<input type="hidden" class="_selected-value" />
									<div class="g-select__selected" onclick="o2.gSelect.toggle(this)">
										<div class="g-select__selected-name _selected-text">Вид стола</div>
										<div class="g-select__arrow">
											<img src="img/arrow.svg" alt="">
										</div>
									</div>
									<!-- <div class="g-select__error">Error: обязательное поле</div> -->
									<div class="g-select__list _options">
										<ul class="g-select__items g-select__items--table">
											<li data-table = "table-form" data-value="code-rectangular" class="g-select__item g-select__item--active _option" onclick="o2.gSelect.selecttItem(this)">Прямоугольный</li>
											<li data-table = "table-form" data-value="code-round" class="g-select__item _option" onclick="o2.gSelect.selecttItem(this)">Круглый</li>
											<li data-table = "table-form" data-value="code-oval" class="g-select__item _option" onclick="o2.gSelect.selecttItem(this)">Овальный</li>
										</ul>
									</div>
								</div>
								<p data-value="code-rectangular" class="forest__flex-content-item-paragraph">Cтол из массива карагача с вставкой из эпоксидной смолы</p>
								<p data-value="code-round" class="forest__flex-content-item-paragraph">круг</p>
								<p data-value="code-oval" class="forest__flex-content-item-paragraph">овал</p>
								<img src="img/table-1.jpeg" alt="forest-table" class="forest__flex-content-item-img">
							</div>
						</div>
					</div>
					<div class="forest__flex-content-item">
						<div class="forest__flex-content-item-head">
							<h2 class="forest__flex-content-item-name">Виды древисины</h2>
						</div>
						<div class="forest__flex-content-item-body">
							<div class="forest__flex-content-item-sel g-select__selected--tree">
								<ul class="forest__flex-content-item-list">
									<li onclick="o2.gSelect.changeTreeF(this)" data-value="code-kargach" class="forest__flex-content-item-item _forest__flex-content-item-item active"><img src="img/tree-1.png" alt="tree"></li>
									<li onclick="o2.gSelect.changeTreeF(this)" data-value="code-oreh" class="forest__flex-content-item-item _forest__flex-content-item-item"><img src="img/tree-2.png" alt="tree"></li>
									<li onclick="o2.gSelect.changeTreeF(this)" data-value="code-graph" class="forest__flex-content-item-item _forest__flex-content-item-item"><img src="img/tree-3.png" alt="tree"></li>
									<li onclick="o2.gSelect.changeTreeF(this)" data-value="code-shelk" class="forest__flex-content-item-item _forest__flex-content-item-item"><img src="img/tree-4.png" alt="tree"></li>
									<li onclick="o2.gSelect.changeTreeF(this)" data-value="code-akacia" class="forest__flex-content-item-item _forest__flex-content-item-item"><img src="img/tree-5.png" alt="tree"></li>
								</ul>
								<div class="g-select _select changed">
									<input type="hidden" class="_selected-value" value="code-kargach" />
									<div class="g-select__selected" onclick="o2.gSelect.toggle(this)">
										<div class="g-select__selected-name _selected-text">Вид древесины</div>
										<div class="g-select__arrow">
											<img src="img/arrow.svg" alt="">
										</div>
									</div>
									<div class="g-select__list _options">
										<ul class="g-select__items g-select__items--wood">
											<li data-wood = "type-wood" data-value="code-kargach" data-price = "40000" class="g-select__item g-select__item--tree g-select__item--active _option" onclick="o2.gSelect.selecttItem(this)">Каргач</li>
											<li data-wood = "type-wood" data-value="code-oreh" data-price = "50000" class="g-select__item g-select__item--tree _option" onclick="o2.gSelect.selecttItem(this)">Орех</li>
											<li data-wood = "type-wood" data-value="code-graph" data-price = "60000" class="g-select__item g-select__item--tree _option" onclick="o2.gSelect.selecttItem(this)">Граф</li>
											<li data-wood = "type-wood" data-value="code-shelk" data-price = "70000" class="g-select__item g-select__item--tree _option" onclick="o2.gSelect.selecttItem(this)">Шелковица</li>
											<li data-wood = "type-wood" data-value="code-akacia" data-price = "80000" class="g-select__item g-select__item--tree _option" onclick="o2.gSelect.selecttItem(this)">Акация</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
